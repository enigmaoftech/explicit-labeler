# Explicit Labeler - Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# System Configuration
# ============================================

# Time Zone (default: UTC)
# Examples: America/New_York, Europe/London, Asia/Tokyo
TZ=UTC

# User ID and Group ID for file ownership
# Find your UID/GID with: id -u  and  id -g
# Default: 1000:1000
PUID=1000
PGID=1000

# ============================================
# Scheduling
# ============================================

# Run script immediately at container start (default: true)
# Set to false to only run on cron schedule
RUN_AT_START=true
# Run daily at 2 AM (default)
CRON_SCHEDULE=0 2 * * *

# ============================================
# Plex Configuration
# ============================================

# Plex server throttling
DELAY_AFTER_ALBUM=-0.5
DELAY_AFTER_TRACK=-0.2
DELAY_AFTER_ARTIST=-1.0
DELAY_AFTER_API_CALL=-0.1

# Plex server URL
# For Docker on same host: http://host.docker.internal:32400
# For remote server: http://your-plex-server:32400
# For local testing: http://127.0.0.1:32400
PLEX_BASEURL=https://plex.domain.com

# Plex authentication token
# Get your token from: https://support.plex.tv/articles/204059436-finding-an-authentication-token-x-plex-token/
PLEX_TOKEN=your_plex_token_here

# Plex music library name (default: Music)
# For multiple libraries just add another entry with the next library name
PLEX_LIBRARY=Music
